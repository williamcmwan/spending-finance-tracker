# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_this_in_production

# Google OAuth Configuration (Optional - leave empty to disable Google login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Client Configuration
CLIENT_URL=http://localhost:3001

# Database Configuration (SQLite)
# Development: ./data/spending.db
# Production: /var/lib/spending-tracker/spending.db (recommended)
# Alternative: /opt/spending-tracker/data/spending.db
# User-specific: $HOME/spending-tracker/data/spending.db
DATABASE_PATH=./data/spending.db

# CORS Configuration
# Add your production URLs and local network IPs here
# Examples:
# - Local network: http://192.168.1.100:4173,http://10.0.0.50:4173
# - Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com
HOST=0.0.0.0
BYPASS_2FA=true
